<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<!--  Mail e Spring 3 -->
	
	<bean id="templateMessage" class="org.springframework.mail.SimpleMailMessage">
  		<property name="from" value="customerservice@ordersystem.com"/>
  		<property name="subject" value="Your order"/>
	</bean>

	<bean id="mailSender" class="org.springframework.mail.javamail.JavaMailSenderImpl">
	    <property name="host" value="smtp.gmail.com"/>
	    <property name="port" value="25"/>
	    <property name="username" value="corsi.stefano74@gmail.com"/>
	    <property name="password" value="corsostefano"/>
	    <property name="javaMailProperties">
	        <props>
	        	<!-- Use SMTP transport protocol -->
	            <prop key="mail.transport.protocol">smtp</prop>
	            <!-- Use SMTP-AUTH to authenticate to SMTP server -->
	            <prop key="mail.smtp.auth">true</prop>
	            <!-- Use TLS to encrypt communication with SMTP server -->
	            <prop key="mail.smtp.starttls.enable">true</prop>
	            <prop key="mail.debug">true</prop>
	        </props>
	    </property>
	</bean>

	
  	
	<bean id="orderManager" class="corso.spring.j2ee.mail.service.OrderManagerService">
  		<property name="mailSender" ref="mailSender"/>
  		<property name="templateMessage" ref="templateMessage"/>
	</bean>
	
	

</beans>
